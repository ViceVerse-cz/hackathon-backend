{
  "compilerOptions": {
    "target": "ESNext",                               
    "module": "commonjs",                             
    "rootDir": "./src",                               
    "moduleResolution": "node",                       
    "baseUrl": "./",                                  
    "allowJs": true,                                  
    "checkJs": true,                                  
    "outDir": "./dist",                               
    "removeComments": true,                           
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                   
    "noImplicitAny": true,                            
    "strictNullChecks": true,                         
    "alwaysStrict": true,                             
    "skipLibCheck": true                              
  }
}
